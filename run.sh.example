#!/bin/bash
# LogCortex V3 启动脚本

cd /path/to/DeepFlight-Review

# 激活虚拟环境
source venv/bin/activate

# 设置 API Key (从环境变量或直接设置)
# 方式1: 从环境变量读取
export LOGCORTEX_API_KEY="${LOGCORTEX_API_KEY:-your_api_key_here}"

# 方式2: 或者使用 .env 文件
# source .env

# 清除代理（避免连接问题）
unset http_proxy https_proxy HTTP_PROXY HTTPS_PROXY all_proxy ALL_PROXY

echo "=========================================="
echo "  LogCortex V3 启动中..."
echo "=========================================="
echo ""
echo "  日志目录: ~/Code/FlightLog/"
echo "  API: GLM-5 (默认)"
echo ""
echo "  访问地址: http://localhost:8501"
echo ""
echo "=========================================="

# 启动 Streamlit
streamlit run app.py --server.port 8501
